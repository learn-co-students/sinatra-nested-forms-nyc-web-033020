<h1>Display your Pirate here</h1>
    <div class="Pirate">
        <p>Name: <%= @pirate.name %></p><br>
        <p>Weight: <%= @pirate.weight %> pounds</p><br>
        <p>Height: <%= @pirate.height %> inches</p><br>
    </div><br>

<h2>Ships</h2>
    <% @ships.each do |ship| %>
    <div class="ship">
        <p>Name: <%= ship.name %></p><br>
        <p>Type: <%= ship.type %></p><br>
        <p>Booty: <%= ship.booty %></p>
    </div><br>
    <% end %>
